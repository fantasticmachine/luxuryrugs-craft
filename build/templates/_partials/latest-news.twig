{% set perPage = params.perPage ?? null %}
{% set more = params.more ?? false %}

{% set articles = craft.entries.section('blog').orderBy('postDate desc').limit(perPage) %}

{% set transform = {
		width: 360,
		mode: 'crop'
	}
%}
<div class="js-masonry">
{% for article in articles.all() %}
	{% set image = article.mainImage.one() ?? null %}
	<a href="{{ article.url }}" class="card--news">
		{% if image %}
		{% set imageSrc = image.url(transform) %}
		<div class="card__image" style="background-image: url({{ imageSrc }}); background-position: center; background-scale: cover; background-repeat: no-repeat; width: 300px;">
			<img src="{{ imageSrc }}" style="visibility: hidden">
		</div>
		{% endif %}
		<div class="card__content">
			<h3>{{ article.title }}</h3>
			{{ article.body | chop(limit=20, unit='w') | trim('.','right') | raw }}&hellip;
		</div>
	</a>
{% endfor %}
</div>
